SELECT 
    c.id, 
    c.post_id, 
    c.user_id, 
    u.username, 
    c.text, 
    c.like_count, 
    c.dislike_count, 
    c.created_at,
    cr.type AS reaction, 
    cr.user_id AS reaction_user_id
FROM 
    Comments c
INNER JOIN 
    Users u ON u.id = c.user_id
LEFT JOIN 
    Comment_Reactions cr ON cr.comment_id = c.id
WHERE 
    c.post_id = 14
ORDER BY 
    c.created_at ASC;
